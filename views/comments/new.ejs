<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add New Comment to <%= article.name %></h1>
        <div class="form-center">
            <form action="/articles/<%= article._id %>/comments" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="comment[text]" placeholder="text"> 
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>                
            </form>
            <a href="/articles">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>